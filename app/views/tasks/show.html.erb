<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:client_name) %>:</strong></dt>
  <dd><%= @task.client_name %></dd>


  <dt><strong><%= "Produtos" %>:</strong></dt>
  <dd><%= render partial: 'tasks_products', locals: {task: @task}%></dd>


  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @task.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @task.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:final_value) %>:</strong></dt>
  <dd><%= @task.final_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @task.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
